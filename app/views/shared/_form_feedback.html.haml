- uid = dom_uid(feedback, css, icon, emphasis, I18n.locale)

- cache(uid) do
  %div{class: css, id: uid}
    %span.iconify{data: {icon: icon, inline: false, "turbo-permanent": true}, class: %i[align-text-top inline-block]}
    - if emphasis.present?
      %span.font-bold= emphasis
    %span= feedback
