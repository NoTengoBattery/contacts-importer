#users-info-form
  = form_for(resource, as: resource_name, url: url) do |f|
    .form-field.mt-4
      = f.label(:email, class: style_form_label)
      = f.text_field(:email, autocomplete: :email, spellcheck: false, class: style_form_field)
      = validations_form_errors_for(resource, :email)
    .form-field.mt-2
      = f.label(:password, class: style_form_label)
      = f.password_field(:password, autocomplete: "new-password", class: style_form_field)
      = validations_form_errors_for(resource, :password)
      - if for_sign_up
        = validations_form_suggestion("#{t("misc.tip")}:", t("users.shared.random_recommended"))
    - if for_sign_up
      .form-field.mt-2
        = f.label(:password_confirmation, class: style_form_label)
        = f.password_field(:password_confirmation, autocomplete: "new-password", class: style_form_field)
        = validations_form_errors_for(resource, :password_confirmation)
    .actions.flow-root.mt-2
      = f.submit(button_text, class: style_form_button)
      = link_to(link_text, link_url, class: %i[text-primary-500 float-right px-3 py-1.5])
