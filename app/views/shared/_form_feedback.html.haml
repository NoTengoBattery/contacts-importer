- uuid = dom_uuid(feedback, css, icon, emphasis)

- cache(uuid) do
  %div{ class: css, data: { "turbo-permanent": true }, id: uuid }
    %span.iconify{ data: { icon: icon, inline: false }, class: %i[align-text-top inline-block] }
    - if emphasis.present?
      %span.font-bold= emphasis
    %span= feedback
