- subject = subject.downcase
- uid = dom_uid(step, subject)

- cache(uid) do
  %p{data: {"turbo-permanent": true}, id: "#{uid}0"}
    %span.iconify.animate-spin.inline{"data-icon": "gg:spinner", "data-inline": false}
    %span= t(".#{step}", subject: subject)
  %p{data: {"turbo-permanent": true}, id: "#{uid}1"}
    %span.iconify.inline{"data-icon": "gg:info", "data-inline": false}
    %span= t(".reload", subject: subject)
